<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">
      <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/child_item"/>


      <LinearLayout
        android:id="@+id/add_child_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        android:orientation="vertical">
        <TextView
          android:id="@+id/first_child_text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Welcome to Oh, Boy! To start please insert first child's details"
          android:paddingBottom="5dp"
          android:visibility="gone"/>

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:layout_marginBottom="4dp"
          android:layout_marginStart="4dp"
          android:layout_marginEnd="4dp"
      >

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <EditText
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:hint="Child's name"
            android:inputType="text"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
          <TextView
            android:id="@+id/enter_dob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@id/text_view_name"
            android:text="Date Of Birth:"/>

          <LinearLayout
            android:id="@+id/enter_dob_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/enter_dob">
            <EditText
              android:id="@+id/text_view_dd"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="dd"
              android:includeFontPadding="false"
              android:inputType="number"
              android:lineSpacingExtra="0dp"
              android:maxLength="2"
              android:textSize="15dp"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="/"
              android:textSize="15dp"/>
            <EditText
              android:id="@+id/text_view_MM"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="MM"
              android:includeFontPadding="false"
              android:inputType="number"
              android:lineSpacingExtra="0dp"
              android:maxLength="2"
              android:textSize="15dp"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="/"
              android:textSize="15dp"/>
            <EditText
              android:id="@+id/text_view_yyyy"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="number"
              android:includeFontPadding="false"
              android:inputType="number"
              android:lineSpacingExtra="0dp"
              android:maxLength="4"
              android:maxLines="1"
              android:textSize="15dp"/>
          </LinearLayout>
          <ImageView
            android:id="@+id/child_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_person"

            />
        </RelativeLayout>
      </androidx.cardview.widget.CardView>
      </LinearLayout>

      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="start">
        <ImageView
          android:id="@+id/add_child_fb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_add"
          />
        <LinearLayout
          android:id="@+id/finish_add_view"
          android:visibility="gone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
          <ImageView
            android:id="@+id/cancel_add_child_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_marginRight="5dp"
            />
          <ImageView
          android:id="@+id/done_add_child_fb"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_done"
          />
        </LinearLayout>
      </FrameLayout>
    </LinearLayout>
  </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>