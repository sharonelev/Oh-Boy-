<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/enter_dob_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
 >
  <EditText
    android:id="@+id/text_view_dd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="dd"
    android:includeFontPadding="false"
    android:inputType="number"
    android:lineSpacingExtra="0dp"
    android:maxLength="2"
    android:textSize="15dp" />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="/"
    android:textSize="15dp" />
  <EditText
    android:id="@+id/text_view_MM"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="MM"
    android:includeFontPadding="false"
    android:inputType="number"
    android:lineSpacingExtra="0dp"
    android:maxLength="2"
    android:textSize="15dp" />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="/"
    android:textSize="15dp" />
  <EditText
    android:id="@+id/text_view_yyyy"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:hint="yyyy"
    android:includeFontPadding="false"
    android:inputType="number"
    android:lineSpacingExtra="0dp"
    android:maxLength="4"
    android:maxLines="1"
    android:textSize="15dp" />
</LinearLayout>
